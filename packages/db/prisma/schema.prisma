generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Difficulty {
  easy
  medium
  hard
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  username String @unique
  email    String @unique
  code     Code[]
}

model Code {
  id       Int    @id @default(autoincrement())
  code     String
  stdin    String
  stdout   String
  language String
  userId   Int
  user     User   @relation(fields: [userId], references: [id])
}

model Problem {
  id           Int        @id @default(autoincrement())
  title        String
  slug         String
  link         String
  company_tags String[]
  difficulty   Difficulty @default(easy)
}
